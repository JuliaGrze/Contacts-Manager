@if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurremtSortOrder == SortOrderEnum.ASC.ToString())
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@SortOrderEnum.DESC">@ViewBag.DisplayName</a>
        <i class="fa-solid fa-sort-up"></i>
    </th>
}
else if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurremtSortOrder == SortOrderEnum.DESC.ToString())
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@SortOrderEnum.ASC">@ViewBag.DisplayName</a>
        <i class="fa-solid fa-sort-down"></i>
    </th>
}
else
{
    <th><a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@SortOrderEnum.DESC">@ViewBag.DisplayName</a></th>
}